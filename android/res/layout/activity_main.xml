 	<TextView
 	    android:id="@+id/choose"
 	    android:layout_width="wrap_content"
 		android:layout_height="wrap_content" 
 		android:text="Choose your destination:"
 		android:paddingTop="2dp"
 		android:paddingLeft="3dp"
 		android:textSize="20dp"
 		android:gravity="left"
 	/>
 	
 	<Spinner
 	    android:id="@+id/spinner1"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:entries="@array/poi_categories"
 	    android:prompt="@string/poi_choose"
 	    android:layout_below="@id/choose"
 	    android:gravity="left"
 	/>
 	
 	<TextView 
 	    android:id="@+id/radius"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:paddingLeft="3dp"
 	    android:text="Enter radius from your current point:"
 	    android:textSize="20dp"
 	    android:gravity="left"
 	    android:layout_below="@id/spinner1"
 	/>
 	
 	<EditText 
 		android:id="@+id/edit_radius"
 		android:layout_width="wrap_content"
 		android:layout_height="wrap_content"
 		android:paddingLeft="3dp"
 		android:paddingTop="5dp"
 		android:gravity="left"
 		android:inputType="number"
 		android:hint="radius(meters)"
 		android:layout_below="@id/radius"    
 	/>
 	
 	<Button
 	    android:id="@+id/find"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_alignParentBottom="true"
 	    android:background="@drawable/button2"
 	    android:gravity="center_vertical|center_horizontal"
 	    android:paddingBottom="2dp"
 	    android:text="Find"
 	    android:textColor="#FFFFFF"
 	    android:textSize="25sp" />
 	    
	</RelativeLayout>
