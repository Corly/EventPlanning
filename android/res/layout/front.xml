<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images" >
    
    <TextView 
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"/>
    
    <TextView 
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Out Going Planner"
        android:textSize="32dp"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/welcome"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/title"
        android:background="@android:color/white" >
    </LinearLayout>
    
    <TextView 
        android:id="@+id/find_pois"
        android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="Find Points of Interest:"
  		android:layout_below="@id/title"   
  		android:paddingBottom="15dp"
  		android:paddingTop="40dp"	
  	/>   
  	
    
    <TextView 
        android:id="@+id/hint_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint2"
        android:textSize="11dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        />    
  	
    <Button
        android:id="@+id/btn_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/hint_city"
        android:background="@drawable/button"
        android:paddingRight="20dp"
        android:text="From a city"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    
    <TextView 
        android:id="@+id/hint_find_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   		android:layout_above="@id/btn_city"
        android:text="@string/hint1"
        android:textSize="11dp"
        android:paddingLeft="3dp"
        android:paddingBottom="50dp"
        android:paddingTop="5dp"
        />
        
    <Button
        android:id="@+id/btn_find"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/hint_find_location"
        android:background="@drawable/button"
        android:text="From current location"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>